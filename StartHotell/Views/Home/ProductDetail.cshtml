@model Model.FE.Product

@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:90px; margin-bottom: 90px">
    <a href="@Url.Action("Index", "Home")" class="btn btn-warning text-white mb-5"><< Back to Home</a>
    <div class="row">
        <div class="col-lg-6">
            <img src="@Model.Image" alt="Alternate Text" style="width: 100%; max-width: 100%; object-fit:cover" />
        </div>
        <div class="col-lg-6 d-flex flex-column justify-content-around">
            <h1 class="text-dark">@Model.Name</h1>
            <h3 style="color:aqua">@(Model.Price.HasValue ? Model.Price.Value.ToString("N0") : "Liên Hệ") VND <small>/Tối</small></h3>
            <h4>Địa chỉ: <span style="color:blue">@Model.Description</span></h4>
            @Html.Raw(Model.Detail)
            <p>
                @if (Model.Status == true)
                {
                    <span style="color:black; font-weight:bolder">Trạng thái:  <span style="font-size: 16px; font-weight:bold; color:#9e9e28eb">Còn phòng</span></span>
                    <div class="row">
                        <div class="col-lg-6">
                            <a href="/them-danh-sach?ProductID=@Model.ID&Quantity=1" class="btn theme_btn button_hover" style="display:inline-block; width:100%; max-width:100%; height:100%">Đặt Ngay</a>
                        </div>
                    </div>
                }
                else
                {
                    <span style="color:black; font-weight:bolder">Trạng thái: Hết phòng</span>
                }
            </p>
        </div>
    </div>
</div>




